{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista de Platos</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Disponible</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for plato in platos %}
            <tr>
                <td><a href="{{ path('plato_show', { 'id': plato.id }) }}">{{ plato.id }}</a></td>
                <td>{{ plato.nombre }}</td>
                <td>{{ plato.precio }}</td>
                <td>{% if plato.disponible %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('plato_show', { 'id': plato.id }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('plato_edit', { 'id': plato.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('plato_new') }}">Registrar un nuevo plato</a>
        </li>
    </ul>
{% endblock %}
